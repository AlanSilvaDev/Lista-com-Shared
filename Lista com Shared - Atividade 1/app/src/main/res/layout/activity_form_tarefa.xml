<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/activity_form_tarefa"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título da tela -->
        <TextView
            android:id="@+id/txtTituloForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Nova Tarefa"
            android:textColor="#333333"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Campo Título -->
        <EditText
            android:id="@+id/edtTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text"
            android:hint="Título da tarefa"
            android:padding="12dp"
            android:textColor="#000"
            android:textColorHint="#888"
            android:textSize="18sp" />

        <!-- Campo Descrição -->
        <EditText
            android:id="@+id/edtDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@android:drawable/edit_text"
            android:gravity="top"
            android:hint="Descrição (opcional)"
            android:minLines="3"
            android:padding="12dp"
            android:textColor="#000"
            android:textColorHint="#888"
            android:textSize="16sp" />

        <!-- Campo Data -->
        <EditText
            android:id="@+id/edtData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@android:drawable/edit_text"
            android:hint="Data (ex: 12/12/2025)"
            android:padding="12dp"
            android:textColor="#000"
            android:textColorHint="#888"
            android:textSize="16sp" />

        <!-- Prioridade -->
        <Spinner
            android:id="@+id/spinnerPrioridade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" />

        <!-- Concluída (só leitura visual por enquanto) -->
        <CheckBox
            android:id="@+id/chkConcluidaForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Tarefa concluída"
            android:textColor="#333333" />

        <!-- Botão Salvar -->
        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#4CAF50"
            android:gravity="center"
            android:padding="16dp"
            android:text="Salvar"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>